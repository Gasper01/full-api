{
  "builds": [
    { 
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist",
        "command": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
